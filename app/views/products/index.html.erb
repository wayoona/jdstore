

 <div class="title">
<div class="title-1  <%= 'title-1-active' if !params[:category] %>">
   <span class="tag-line1">INTERESTING FINDS</span> <span class="tag-line2"> For the kid in you</span>
 </div>
 </div>
<%= render :partial => "products/menu" %>

<!-- <div class="productList clearfix"> -->
<div class="container">


<div class="row product-section">
  <% @products.each do |product| %>
    <div class='col-xs-10 col-sm-3 col-md-3 product-content'>
      <!-- <div class="productList-item-pic w200 h200"> -->
      <%= link_to product_path(product) do %>
        <% if product.product_images.present? %>
          <%= image_tag(product.product_images[0].image.large.url, class: "thumbnail") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
        <% end %>
      <% end %>
    <div class="absolute">

      <% if !product.users.include?(current_user) %>
   <%= link_to("",add_to_favorite_product_path(product),method: :post,class: "fa fa-heart fa-1.5x", style: "color:rgba(0,0,0,0.1);") %>
  <% else %>
   <%= link_to("", quit_favorite_product_path(product),method: :post,  class: "fa fa-heart fa-1.5x", style: "color:rgba(255,0,0,0.4);") %>
  <% end %>
  <!-- 人气-收藏数量-->
 <span style="color:rgba(0,0,0,0.25);font-size:10px;"><%= product.favorite_count %></span>
</div>

     <div class="product-info">
       <p><span>￥</span><%= product.price%></p>
        <p><%= product.title %></p>



     </div>
     </div>
  <% end %>

</div>
</div>
